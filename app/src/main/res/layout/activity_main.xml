<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dan.businessapp.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:src="@drawable/coffeecup"
        android:layout_gravity="center_vertical"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">
        </View>
        <TextView
            android:text="The Coffee"
            android:textSize="24sp"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:text="House"
            android:textSize="24sp"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:text="Best coffee in Mikkeli"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="end"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <TextView
            android:text="At the coffee house, we provide the distinctive taste of coffee due our high quality coffee imported from Vietnam."
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_weight="0"
            android:text="52 Nuijamies"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            />
        <TextView
            android:text="50130 Mikkeli Finland"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
        <TextView
            android:text="Everyday 8am-10pm "
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="046-999-9999"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="11sp"
            android:text="Www.coffeehouse.fi"
            android:layout_marginBottom="4dp"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info@coffeehouse.fi"
             android:textSize="13sp"
            android:layout_weight="0"
            android:layout_gravity="end"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"/>

    </LinearLayout>
</LinearLayout>
